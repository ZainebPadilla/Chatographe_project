<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-success text-white text-center">
          <h4>Connexion</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.label :email, "Adresse Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Mot de Passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-check mb-3">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
            </div>

            <%= f.submit "Se connecter", class: "btn btn-success btn-block" %>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "text-secondary" %><br>
          <%= link_to "Créer un compte", new_registration_path(resource_name), class: "text-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
