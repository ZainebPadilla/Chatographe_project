<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header bg-success text-white text-center">
          <h4>Inscription</h4>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           
            <div class="form-group mb-3">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </div>
           
            <div class="form-group mb-3">
              <%= f.label :email, "Adresse Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password, "Mot de Passe", class: "form-label" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
              <%= f.label :password_confirmation, "Confirmez le Mot de Passe", class: "form-label" %>
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>

            <%= f.submit "Créer un compte", class: "btn btn-success btn-block" %>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to "Déjà inscrit ? Connectez-vous", new_session_path(resource_name), class: "text-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
