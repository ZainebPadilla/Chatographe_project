<h1>Votre Panier</h1>

<% if @items.any? %>
<ul>
  <% @items.each do |item| %>
  <li>
    <strong><%= item.title %></strong> - <%= number_to_currency(item.price) %>
    <%= link_to "Retirer", remove_item_cart_path(item_id: item.id), method: :delete, class: "btn btn-danger" %>

  </li>
  <% end %>
</ul>

<p>
  Total : <%= number_to_currency(@items.sum(&:price)) %>
</p>
<% else %>
<p>Votre panier est vide.</p>
<% end %>

<%= link_to 'Continuer vos achats', items_path %>