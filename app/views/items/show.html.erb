<%= stylesheet_link_tag 'items/show', media: 'all' %>

<div class="notice">
  <p style="color: green"><%= notice %></p>
</div>


<div class="product-details">
  <!-- Section gauche : image et titre -->
  <div class="product-left">
  <h1 class="product-title"><%= @item.title %></h1>
    <img src="<%= @item.image_url %>" alt="<%= @item.title %>" class="product-image img-fluid mb-3">
  </div>

  <!-- Section droite : description et boutons -->
  <div class="product-right">
    <p class="product-description"><%= @item.description %></p>
    <p class="product-price"><%= number_to_currency(@item.price) %></p>

<div class="actions">
  <%= button_to "Add to Cart", add_item_cart_path(@item), method: :post, class: "btn btn-primary add-to-cart-btn" %>
  <%= link_to "Edit this item", edit_item_path(@item) %> |
  <%= link_to "Back to items", items_path %>
</div>

<div class="destroy">
  <%= button_to "Destroy this item", @item, method: :delete %>

  </div>
</div>
