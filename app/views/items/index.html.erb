
<p style="color: green"><%= notice %></p>

<% content_for :title, "Items" %>

<h1>Items</h1>


<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      
      <div class="col-md-3">
        <%= render "item", item: item %>
        <p>
          <%= link_to "Show this item", item %> 
        </p>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to "New item", new_item_path %>  
<% end %>
